    display: flex;
    background-color: #5b5b5f ;
    align-items: center;
    justify-content: center;
    gap: 130px;
    padding: 35px 10px;
  }
  .footer-caja1 p{
    color: #fff;
  }
  .footer-title{
    color: #fff;
    font-size: 17px;
  }
  .planes-prf{
    color: #fff;
    text-decoration: none;
    cursor: pointer;
    font-size: 16px;
  }
  .planes-prf{
    text-decoration: none;
  }
  .planes-prf:hover{
    color: #000;
  }
  .texto-prf1{
    font-size: 16px;
  }
  .texto-prf1 p:hover{
    color: #000;
  }
  /*------------------------------------segundo footer-----------------------*/
  .footer-caja2{
    background-color: #000;
    display: flex;
    justify-content: center;
    gap: 25px;
    height: 90px;
    align-items: center;
  }
  .fill-current{
    color: #fff;
  }
  .caja-derechos p{
    color: #fff;
  }
  .caja-fb a{
    cursor: pointer;
  }
  .logo-pointerF img{
    width: 300px;
  }
  /*-------------------------------Estilo para el ícono de WhatsApp--------------*/
  .whatsapp {
    position: fixed;
    bottom: 15px; /* Ajusta la distancia desde la parte inferior */
    right: 20px;
  }
  @media(max-width: 900px){
    .footer-caja1{
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 70px;
      padding: 35px 18px;
    }
    .caja1-tituloC span{
      margin-top: 0;
    }
    .caja1-tituloS span{
      margin-top: 10px;
    }
    .whatsapp {
      position: fixed;
      bottom: 95px; /* Ajusta la distancia desde la parte inferior */
      right: 10px;
    }
  }
  @media(max-width: 425px){
    .footer-caja1{
      display: flex;
      justify-content: center;
      flex-direction: column;
      gap: 35px;
      align-items: center;
      padding: 15px 8px;
    }
    .footer-title{
      margin: auto;
    }
    .whatsapp {
      position: fixed;
      bottom: 95px; /* Ajusta la distancia desde la parte inferior */
      right: 10px;
    }
    .footer-caja2{
      gap: 12px;
      display: flex;
      justify-content: center;
    }
    .logo-pointerF img{
      width: 200px;
    }
    .prefooter{
      display: flex;
      justify-content: center;
      padding: 10px 5px;
    }
    .logo-google{
      cursor: default;
    }
  }

</style>