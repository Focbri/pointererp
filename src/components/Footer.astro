<style>
  /*-------------------------------Pre Foooter--------------*/
  .prefooter{
    background-color: #e5e6e9;
    display: flex;
    justify-content: center;
    padding: 20px 10px;
  }
  .logo-google{
    cursor: default;
  }
  /*-----------------------------------primer footer----------------------*/
